@import 'nib'





@keyframes strobeBG
 for i in 0..360 
  {1% * i}
   background-position (i*100)px 0px
   
@keyframes throb
 for i in 0..60
  transform scale(i+.6)

#logoHeader
 width 30em
 width 66vw
 height 30em
 height 66vh
 background-size contain
 background-position center
 background-repeat no-repeat
 display none
 margin auto
 svg
  width 30em
  width 66vw
  height 30em
  height 66vh
 

#index-banner
 height 95%
 background #330033
 background radial-gradient(ellipse at center, #ee00ee 1%,#330033 66%)
 animation strobeBG 60s linear 34s infinite forwards, throb 60s linear 0s infinite alternate;

 
#typingHeader
 span.small
  font-size .33em
 span.underline
  text-decoration underline

.hero-pop-out
 position absolute
 width 25%
 min-height 19em
 
.top
 top 5%
 
.bot
 bottom 5%
 
.left
 left 0
 
.right
 right 0
 
#botRightPop *
 text-align right
 


::-webkit-scrollbar-track
 box-shadow inset 0 0 6px rgba(0,0,0,0.1)
 background-color transparent
 border-radius 10px


::-webkit-scrollbar
 width 6px
 background-color transparent

::-webkit-scrollbar-thumb
 border-radius 10px
 background-color transparent
 background-image: linear-gradient(top,
  #303 0%,
  #e0e 50%,
  #e0e 51%,
  #303 100%)
  
::selection
 background #303